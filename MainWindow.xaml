<Window x:Class="ProjetaUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetaUpdate"
        xmlns:viewModel="clr-namespace:ProjetaUpdate.MVVM.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="600" 
        Width="825"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <!--Border Pai-->
    <Border Padding="0"
            CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#DB0F19" Offset="0"/>
                <GradientStop Color="#7A020A" Offset="0.8"/>
                <GradientStop Color="#200000" Offset="1.1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <!-- Grid Geral-->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Barra personalizada -->
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Border Da Window-->
            <Border Grid.Row="0"
                    Background="#4C0105"
                    CornerRadius="10 10 0 0"
                    Style="{StaticResource CommonBorder}"
                    MouseLeftButtonDown="BorderArrasto_Pressionado">

                <Grid>

                    <TextBlock Text="GRUPO PROJETA"
                               HorizontalAlignment="Left"
                               Margin="20 0 0 0"
                               Style="{StaticResource CommonTextBlock}"/>

                    <!-- Botão Minimizar -->
                    <Border Grid.Row="0"
                            Margin="0 0 60 0"
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            Background="#DB0F19"
                            CornerRadius="5"
                            Style="{StaticResource CommonBorder}">

                        <Button Content="—" 
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="14"
                                Style="{StaticResource NormalButtonSelect}"/>
                        
                    </Border>
                    <!-- Botão Minimizar -->

                    <!-- Botão Fechar -->
                    <Border Grid.Row="0"
                            Margin="0 0 20 0"
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            Background="#DB0F19"
                            CornerRadius="5"
                            Style="{StaticResource CommonBorder}">

                        <Button Content="X" 
                                FontSize="14"
                                Style="{StaticResource NormalButtonSelect}"
                                Click="FecharApp"/>

                    </Border>
                <!-- Botão Fechar -->
                </Grid>

            </Border>
            <!-- Border Da Window-->

            <!-- Grid Conteudo-->
            <Grid Grid.Row="1"
                  Margin="20">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--Logo-->
                <Image Grid.Row="0"                 
                       Source="Resources/Images/logo-branca.png"
                       Stretch="Uniform"
                       Width="200"
                       HorizontalAlignment="Left"/>
                       <!--MouseLeftButtonDown="Logo_MouseLeftButtonDown"-->
                <!--Logo-->

                <!-- Grid Duas Linhas-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Border Menu Buttons -->
                    <Border Padding="0 20 0 0">

                        <!-- Stack Menu Buttons -->                     
                        <StackPanel>

                            

                            <!-- HOME -->
                            <RadioButton Content="HOME"
                                         Style="{StaticResource MenuButtonTheme}"
                                         IsChecked="True"
                                         Command="{Binding HomeViewCommand}"/>
                            <!-- HOME -->

                            <!-- ProjetaHDR -->
                            <RadioButton Content="PROJETA HDR"
                                         Tag="ProjetaHDR"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Command="{Binding AddinDownloadViewCommand}"
                                         CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>

                            <!-- ProjetaHDR -->

                            <!-- TESTE -->
                            <RadioButton Content="FIRST PROJETA HDR"
                                         Tag="FirstProjetaHDR"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Command="{Binding AddinDownloadViewCommand}"
                                         CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>

                            <!-- TESTE -->
                        </StackPanel>
                        <!-- Stack Menu Buttons -->
                        
                    </Border>
                    <!-- Border Menu Buttons -->

                    <!-- Border Version/Actions -->
                    <ContentControl Grid.Column="1"
                                    Content="{Binding CurrentViewModel}"/>


                </Grid>
                <!-- Grid Duas Linhas-->
                
            </Grid>
            <!-- Grid Conteudo-->
        
        </Grid>
        <!-- Grid Geral-->

    </Border>
    <!-- Border Pai -->
    
</Window>
<!-- Window -->
