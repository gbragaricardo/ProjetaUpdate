<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="BorderPressed">
        <!-- Definição padrão da borda -->
        <Setter Property="Background" Value="#4C0105"/>
        <Setter Property="Effect">
            <Setter.Value>
                
                <DropShadowEffect Color="Black" 
                      Direction="320" 
                      ShadowDepth="5" 
                      BlurRadius="10" 
                      Opacity="0.5"/>
                
            </Setter.Value>
        </Setter>

        <Style.Triggers>

            <DataTrigger Binding="{Binding IsMouseOver, ElementName= BotaoProjetaHDR}" Value="True">
                <Setter Property="Background" Value="#16559F"/>
            </DataTrigger>

            <!-- Remove sombra e muda a cor quando o botão dentro estiver IsChecked -->
            <DataTrigger Binding="{Binding IsChecked, ElementName= BotaoProjetaHDR}" Value="True">
                <Setter Property="Background" Value="#009587"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="3" Opacity="0.9"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

        </Style.Triggers>
    </Style>

</ResourceDictionary>